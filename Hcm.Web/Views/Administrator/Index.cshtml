@model IEnumerable<Hcm.Web.Models.AdministratorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            @*<a asp-action="Create"*@
               @*class="btn btn-primary btn-sm float-right" style="width:30px;height:30px">+</a>*@
            <div class="text-center">
                <h3>Administrators</h3>
            </div>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if(item.Role == "Administrator")
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm float-right hcm-btn">Delete</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm float-right mr-2 hcm-btn">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>